<Patch>
    <Operation Class="XmlExtensions.OptionalPatch">
        <modId>boomer.Rebalance</modId>
        <key>gravshipConduit</key>
        <defaultValue>false</defaultValue>
        <caseTrue>
            <Operation Class="PatchOperationConditional">
                <xpath>//ThingDef[defName="GravshipHull"]/comps/li/compClass[text()="CompPowerTransmitter"]</xpath>
                <nomatch Class="PatchOperationAdd">
                    <xpath>//ThingDef[defName="GravshipHull"]/comps</xpath>
                    <value>
                        <li Class="CompProperties_Power">
                            <compClass>CompPowerTransmitter</compClass>
                            <transmitsPower>true</transmitsPower>
                        </li>
                    </value>
                </nomatch>
            </Operation>
            <Operation Class="PatchOperationReplace">
                <xpath>//ThingDef[defName="GravshipHull"]/costStuffCount/text()</xpath>
                <value>9</value>
            </Operation>
        </caseTrue>
    </Operation>
</Patch>