<Patch>
    <Operation Class="XmlExtensions.OptionalPatch">
        <modId>boomer.Rebalance</modId>
        <key>hopperStackLimit</key>
        <defaultValue>false</defaultValue>
        <caseTrue>
            <Operation Class="PatchOperationAdd">
                <xpath>//ThingDef[defName="Hopper"]/building</xpath>
                <value>
                    <maxItemsInCell>3</maxItemsInCell>
                </value>
            </Operation>
        </caseTrue>
    </Operation>
</Patch>